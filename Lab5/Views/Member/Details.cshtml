@model Lab5.Models.Member
@{
    ViewBag.Title = "Chi tiết thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Chi tiết thành viên</h2>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Mã số
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)  <!-- Giả sử Id là kiểu int, có thể thay đổi để hiển thị rõ hơn nếu cần -->
        </dd>

        <dt>
            Tên đăng nhập
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            Họ và tên
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            Mật khẩu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)  <!-- Xem xét không hiển thị mật khẩu trong chi tiết -->
        </dd>

        <dt>
            Tuổi
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Age) <!-- Nếu Age là int?, có thể cần hiển thị một giá trị mặc định -->
        </dd>

        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Quay lại", "CreateOne") <!-- Đảm bảo "CreateOne" là tên hành động chính xác -->
</p>


